<p>
  <strong>Commenter:</strong>
  <%= User.find(comment.user_id).email %>
</p>

<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>

<% if can? :update, comment %>
  <p>
    <%= link_to 'Destroy Comment', [comment.article, comment],
                method: :delete,
                data: { confirm: "Are you sure?" } %>
  </p>
<% end %>
